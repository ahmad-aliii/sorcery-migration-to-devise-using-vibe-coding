<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold mb-4">Welcome to Our Application</h1>
  <p class="text-lg mb-4">This is the home page of our application.</p>
  
  <% if current_user %>
    <p class="text-lg">You are logged in as <%= current_user.email %></p>
    <%= button_to "Logout", logout_path, method: :delete, class: "mt-4 bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
  <% else %>
    <div class="mt-4">
      <%= link_to "Login", login_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-4" %>
      <%= link_to "Sign Up", signup_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div> 